import requests
from bs4 import BeautifulSoup
import sqlite3
import time

# 1. データベースの準備 (SQLite)
dbname = 'google_repos.db'
conn = sqlite3.connect(dbname)
cur = conn.cursor()

# テーブルが存在しなければ作成 (id, name, language, stars)
# ※idは自動採番、それ以外はテキストや整数
cur.execute('''
    CREATE TABLE IF NOT EXISTS repositories (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        name TEXT,
        language TEXT,
        stars INTEGER
    )
''')
conn.commit()

# 2. スクレイピングの実行
url = "https://github.com/orgs/google/repositories" # Googleのリポジトリ一覧
response = requests.get(url)

# ページが正しく取得できたか確認
if response.status_code == 200:
    soup = BeautifulSoup(response.text, 'html.parser')
    
    # リポジトリのリスト要素を取得 (HTML構造は変わる可能性があるため、検証ツールでクラス名を確認推奨)
    # 一般的に <ul> 内の <li> タグなどがリストになっています
    repo_list = soup.find_all('li', class_='Box-row') # ※クラス名は要確認

    print(f"{len(repo_list)} 件のリポジトリが見つかりました。処理を開始します...")

    for repo in repo_list:
        try:
            # A. リポジトリ名を取得
            name_tag = repo.find('a', itemprop='name codeRepository')
            repo_name = name_tag.text.strip() if name_tag else "Unknown"

            # B. 主要言語を取得 (存在しない場合もあるので注意)
            lang_tag = repo.find('span', itemprop='programmingLanguage')
            language = lang_tag.text.strip() if lang_tag else "No Language"

            # C. スター数を取得
            # スターの数は通常 "a" タグの中にあり、hrefが "stargazers" で終わるものを探す等の工夫が必要
            star_tag = repo.find('a', href=lambda x: x and x.endswith('/stargazers'))
            if star_tag:
                stars_text = star_tag.text.strip().replace(',', '') # カンマを除去
                stars = int(stars_text)
            else:
                stars = 0

            # 取得データの確認表示（デバッグ用）
            print(f"取得: {repo_name} | {language} | {stars} stars")

            # D. データベースへ保存
            cur.execute('INSERT INTO repositories (name, language, stars) VALUES (?, ?, ?)', 
                        (repo_name, language, stars))
            
            # 重要: サーバーへの負荷軽減のため待機
            time.sleep(1)

        except Exception as e:
            print(f"エラー発生: {e}")
            continue

    # 変更を確定
    conn.commit()

else:
    print("Webページの取得に失敗しました")

# 3. 保存したデータをSELECT文で表示する (課題の要件)
print("\n--- データベース保存結果 ---")
cur.execute('SELECT * FROM repositories')
rows = cur.fetchall()

for row in rows:
    print(row)

# 4. コネクションを閉じる
conn.close()